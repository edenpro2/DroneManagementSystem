<Window x:Class="PL.Windows.Tracking.DroneTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:controls="clr-namespace:PL.Controls"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        MinHeight="{Binding MinScreenHeight}"
        MinWidth="{Binding MinScreenWidth}"
        Height="691"
        Width="1229"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type materialDesign:Card}" BasedOn="{StaticResource CardStyle}" >
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="25" />
            <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="All" />
        </Style>
        <Style TargetType="{x:Type DockPanel}" x:Key="DetailsDP">
            <Setter Property="Margin" Value="0 5 0 0" />
        </Style>
    </Window.Resources>

    <materialDesign:Card
        DataContext="{Binding DroneViewModel}"
        Margin="0"
        Background="{StaticResource MaterialDesignPaper}"
        UniformCornerRadius="5"
        materialDesign:ShadowAssist.ShadowDepth="Depth1">
        <!-- Viewbox 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            ClipToBounds="True"
            Stretch="UniformToFill"> -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.25*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.9*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <DockPanel Margin="15">
                                <TextBlock
                                    d:Text="DJI Avata"
                                    Text="{Binding Drone.model}"
                                    FontSize="18"
                                    FontFamily="Inter"
                                    FontWeight="UltraBold"/>
                                <TextBlock
                                    Text="4XSASD2D9A9S"
                                    Margin="10 0 0 0"
                                    FontSize="17.5"
                                    Foreground="#77111111"
                                    FontFamily="Inter"
                                    FontWeight="SemiBold"/>
                            </DockPanel>

                            <Grid>
                                <Image 
                                    d:Source="/Resources/Models/DJI Avata.png"
                                    Source="{Binding ModelImg}"
                                    Margin="0 -30 0 0"
                                    VerticalAlignment="Top"
                                    Width="280"/>
                                <DockPanel
                                    Margin="0 200 0 0">
                                    <Syncfusion:SfCircularProgressBar
                                        x:Name="CustomContentProgressBarLevel"
                                        Progress="{Binding Drone.battery}"
                                        Width="120"
                                        Height="120"
                                        ProgressColor="#4578d1" TrackColor="#d9d9d9" >
                                        <Syncfusion:SfCircularProgressBar.ProgressContent>
                                            <StackPanel Margin="0 -10 0 0">
                                                <Image 
                                                    RenderTransformOrigin="0.5,0.5"
                                                    Source="/Resources/bolt.png"
                                                    Width="20">
                                                    <Image.LayoutTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleY="1" ScaleX="-1"/>
                                                            <SkewTransform AngleY="0" AngleX="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <TranslateTransform/>
                                                        </TransformGroup>
                                                    </Image.LayoutTransform>
                                                </Image>
                                                <TextBlock 
                                                    d:Text="10%"
                                                    Text="{Binding Progress,StringFormat={}{0}%}" 
                                                    TextAlignment="Center"
                                                    DataContext ="{x:Reference CustomContentProgressBarLevel}" />
                                                <TextBlock 
                                                    Text="Battery"
                                                    Foreground="#bdbdbd"/>
                                            </StackPanel>
                                        </Syncfusion:SfCircularProgressBar.ProgressContent>
                                    </Syncfusion:SfCircularProgressBar>
                                </DockPanel>
                               
                            </Grid>
                        </StackPanel>

                        <!-- Drone Details Pane -->
                        <Border 
                            CornerRadius="10"
                            Background="#f6f6f6"
                            Grid.Column="1">
                            <Grid
                                Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                
                                <DockPanel 
                                    Grid.Row="0"
                                    Style="{StaticResource DetailsDP}"> 
                                    <TextBlock
                                        Text="Model:"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#d9d9d9"/>
                                    <TextBlock
                                        Margin="5 0 0 0"
                                        d:Text="DJI Avata"
                                        Text="{Binding Drone.model}"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#262626"/>
                                </DockPanel>
                                
                                <DockPanel 
                                    Grid.Row="1"
                                    Style="{StaticResource DetailsDP}">
                                    <TextBlock
                                        Text="Class:"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#d9d9d9"/>
                                    <TextBlock
                                        Margin="5 0 0 0"
                                        d:Text="Heavy"
                                        Text="{Binding Drone.maxWeight}"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#262626"/>
                                </DockPanel>

                                <DockPanel 
                                    Grid.Row="2"
                                    Style="{StaticResource DetailsDP}">
                                    <TextBlock
                                        Text="Status:"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#d9d9d9"/>
                                    <TextBlock
                                        Margin="5 0 0 0"
                                        d:Text="Maintenance"
                                        Text="{Binding Drone.status}"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#262626"/>
                                </DockPanel>

                                <DockPanel 
                                    Grid.Row="3"
                                    Style="{StaticResource DetailsDP}">
                                    <TextBlock
                                        Text="Active:"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#d9d9d9"/>
                                    <TextBlock
                                        Margin="5 0 0 0"
                                        d:Text="True"
                                        Text="{Binding Drone.active}"
                                        FontSize="16"
                                        FontFamily="Inter"
                                        FontWeight="Bold"
                                        Foreground="#262626"/>
                                </DockPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1">

                </materialDesign:Card>

            </Grid>

            <controls:WindowControls
                x:Name="CustomButtons"
                Grid.Column="1"
                Grid.Row="0"
                Margin="10"/>

        </Grid>

        <!--
        </Viewbox> -->
        
    </materialDesign:Card>



</Window>
