<Page x:Class="PL.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="HomePage"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Page.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MaterialDesignToolBackground}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="14" />
        </Style>
 
        <Style TargetType="{x:Type Ellipse}">
            <Setter Property="Fill" Value="DodgerBlue" />
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
        </Style>

        <Style x:Key="StackPanelMargin" TargetType="{x:Type StackPanel}">
            <Setter Property="Margin" Value="20 0 0 0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>

        <Style TargetType="{x:Type Image}">
            <Setter Property="Width" Value="70"/>
         </Style>

        <ResourceDictionary x:Key="RoundedCorners">
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </ResourceDictionary>


        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="Details" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="Foreground" Value="DimGray" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="17" />
        </Style>
    </Page.Resources>

    <!-- Page -->
    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
        <Grid 
            x:Name="MainGrid"
            Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>


            <Button
                x:Name="Button"
                Style="{StaticResource MenuButton}"
                Resources="{StaticResource RoundedCorners}"
                Click="NewParcelBtn_Click"
                Grid.Row="1"
                Grid.Column="1" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse/>
                        <Image Source="/Icons/package.png"/>
                    </Grid>
                    <StackPanel 
                        Style="{StaticResource StackPanelMargin}">
                        <TextBlock
                            Text="New Parcel"
                            Style="{StaticResource Title}" />
                        <TextBlock
                            Text="Send a new package     "
                            Style="{StaticResource Details}" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                Style="{StaticResource MenuButton}"
                Resources="{StaticResource RoundedCorners}"
                Click="SentBtn_Click"
                Grid.Row="3"
                Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse/>
                        <Image Source="/Icons/sent.png"/>
                    </Grid>
                    <StackPanel
                        Style="{StaticResource StackPanelMargin}">
                        <TextBlock
                            Text="Sent Packages"
                            Style="{StaticResource Title}" />
                        <TextBlock
                            Text="Track packages you sent"
                            Style="{StaticResource Details}" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                Style="{StaticResource MenuButton}"
                Resources="{StaticResource RoundedCorners}"
                Grid.Row="1"
                Grid.Column="3"
                Click="SettingsBtn_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse/>
                        <Image Source="/Icons/settings.png" />
                    </Grid>
                    <StackPanel
                        Style="{StaticResource StackPanelMargin}">
                        <TextBlock
                            Text="Settings"
                            Style="{StaticResource Title}" />
                        <TextBlock
                            Text="Update account settings"
                            Style="{StaticResource Details}" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                Style="{StaticResource MenuButton}"
                Resources="{StaticResource RoundedCorners}"
                Click="ScheduledBtn_Click" 
                Grid.Row="3"
                Grid.Column="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Ellipse/>
                        <Image Source="/Icons/incoming.png" />
                    </Grid>
                    <StackPanel 
                        Style="{StaticResource StackPanelMargin}">
                        <TextBlock
                            Text="Scheduled"
                            Style="{StaticResource Title}"/>
                        <TextBlock
                            Style="{StaticResource Details}" Width="210">
                            <Run Text="Track packages on their" />
                            <LineBreak />
                            <Run Text="way to you" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Button>

        </Grid>
    </materialDesign:Card>
</Page>